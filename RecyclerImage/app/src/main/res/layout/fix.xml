<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cancer"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/cancer"
            android:layout_width="25dp"
            android:layout_height="25dp"/>
        <TextView
            android:padding="10dp"
            android:id="@+id/top"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:text="报修"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:background="@color/translucent_nodata"
                android:layout_height="10dp"
                android:layout_width="match_parent"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:padding="10dp"
                    android:text="报修物品"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:singleLine="true"
                    android:id="@+id/thing"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textSize="13dp"
                    android:hint="请填写报修的物品"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"/>
                <Space
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"/>
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/wechar"
                    android:layout_height="18dp"
                    android:layout_width="18dp"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/translucent_nodata"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:padding="10dp"
                    android:text="学校楼号"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:singleLine="true"
                    android:id="@+id/partment"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textSize="13dp"
                    android:hint="请填写要报修的楼号"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"/>
                <Space
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"/>
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/wechar"
                    android:layout_height="18dp"
                    android:layout_width="18dp"/>
            </LinearLayout>
            <TextView
                android:background="@color/translucent_nodata"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:padding="10dp"
                    android:text="详细地址"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:singleLine="true"
                    android:id="@+id/address"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textSize="13dp"
                    android:hint="请填写您的详细地址"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"/>
                <Space
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"/>
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/wechar"
                    android:layout_height="18dp"
                    android:layout_width="18dp"/>
            </LinearLayout>
            <TextView
                android:background="@color/translucent_nodata"
                android:layout_height="10dp"
                android:layout_width="match_parent"/>
            <LinearLayout
                android:background="@color/white"
                android:orientation="vertical"
                android:id="@+id/parent_content"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <EditText
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:textSize="13dp"
                    android:id="@+id/content"
                    android:hint="请您简单叙述物品以及物品损坏情况"
                    android:background="@drawable/textarea"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/pictures"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="90dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:minLines="1"
                android:maxLines="5"
                android:layout_marginTop="10dp"
                android:background="@color/translucent_nodata"
                android:layout_height="10dp"
                android:layout_width="match_parent"/>
            <EditText
                android:textSize="13dp"
                android:id="@+id/word_to_worker"
                android:hint="想对维修师傅说的话，如期望的维修时间（选填）"
                android:background="@drawable/textarea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textCursorDrawable="@drawable/cursor_color" />
            <TextView
                android:layout_marginLeft="10dp"
                android:background="@color/translucent_nodata"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:padding="10dp"
                    android:text="联系人姓名"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:singleLine="true"
                    android:id="@+id/name"
                    android:textColor="@color/black"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textSize="13dp"
                    android:hint="姓名"
                    android:textColorHint="@color/black"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"/>
            </LinearLayout>
            <TextView
                android:layout_marginLeft="10dp"
                android:background="@color/translucent_nodata"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:padding="10dp"
                    android:text="联系电话    "
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <EditText
                    android:textCursorDrawable="@drawable/cursor_color"
                    android:singleLine="true"
                    android:id="@+id/phone"
                    android:textColor="@color/black"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textSize="13dp"
                    android:hint="电话"
                    android:textColorHint="@color/black"
                    android:background="@null"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_fix"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:text="提交报修"
                android:layout_height="40dp"
                android:layout_width="match_parent"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
