<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/forum_dialog_item">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:src="@mipmap/ic_launcher_round"
                style="@style/forum_dialog_item_img"/>
            <TextView
                style="@style/forum_dialog_item_text"
                android:text="分享到"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_width="0dp">
            <ImageView
                android:id="@+id/share_by_qq"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/qq"/>
            <ImageView
                android:id="@+id/share_by_wecahr"
                android:padding="14dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/wechar"/>
            <ImageView
                android:id="@+id/share_by_weibo"
                android:padding="15dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@mipmap/weibo"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:visibility="gone"
        android:id="@+id/forum_line_1"
        android:layout_height="1dp"
        style="@style/forum_dialog_item_line"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/forum_delete"
        style="@style/forum_dialog_item">
        <ImageView
            android:src="@mipmap/qq"
           style="@style/forum_dialog_item_img"/>
        <TextView
            style="@style/forum_dialog_item_text"
            android:text="删除"/>
    </LinearLayout>

    <TextView
        android:id="@+id/forum_line_2"
        android:layout_height="1dp"
        style="@style/forum_dialog_item_line"/>
    <LinearLayout
        android:id="@+id/interest"
        style="@style/forum_dialog_item">
        <ImageView
            android:src="@mipmap/qq"
            style="@style/forum_dialog_item_img"/>
        <TextView
            android:id="@+id/interest_txt"
            style="@style/forum_dialog_item_text"
            android:text="关注此人"/>
    </LinearLayout>

    <TextView
        android:id="@+id/forum_line_3"
        android:layout_height="1dp"
        style="@style/forum_dialog_item_line"/>
    <LinearLayout
        android:id="@+id/block"
        style="@style/forum_dialog_item">
        <ImageView
            android:src="@mipmap/qq"
            style="@style/forum_dialog_item_img"/>
        <TextView
            style="@style/forum_dialog_item_text"
            android:text="屏蔽此人"/>

    </LinearLayout>

    <TextView
        android:layout_height="1dp"
        style="@style/forum_dialog_item_line"/>
    <LinearLayout
        android:id="@+id/cancel"
        style="@style/forum_dialog_item">
        <ImageView
            android:src="@mipmap/qq"
            style="@style/forum_dialog_item_img"/>
        <TextView
            style="@style/forum_dialog_item_text"
            android:text="取消"/>

    </LinearLayout>
</LinearLayout>
