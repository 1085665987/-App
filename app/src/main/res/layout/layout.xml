<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/main_viewpager"
        android:layout_height="fill_parent"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/main"
            style="@style/item_layout_style">
            <ImageView
                android:id="@+id/img_main"
                android:src="@mipmap/main"
                style="@style/item_img_style"/>
            <TextView
                android:id="@+id/txt_main"
                style="@style/item_text_style"
                android:text="首页" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/friend_circle"
            style="@style/item_layout_style">
            <ImageView
                android:id="@+id/img_friend_circle"
                android:src="@mipmap/friend_c_no_select"
                style="@style/item_img_style"/>
            <TextView
                android:id="@+id/txt_friend_circle"
                style="@style/item_text_style"
                android:text="同学圈" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/trade"
            style="@style/item_layout_style">
            <ImageView
                android:id="@+id/img_trade"
                android:src="@mipmap/fuli_she_no_select"
                style="@style/item_img_style"/>
            <TextView
                android:id="@+id/txt_trade"
                style="@style/item_text_style"
                android:text="福利社" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="10dp"
            android:id="@+id/mine"
            style="@style/item_layout_style">
            <ImageView
                android:id="@+id/img_mine"
                android:src="@mipmap/mine_no_select"
                style="@style/item_img_style"/>
            <TextView
                android:id="@+id/txt_mine"
                style="@style/item_text_style"
                android:text="我的" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
